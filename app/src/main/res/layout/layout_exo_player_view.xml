<?xml version="1.0" encoding="utf-8"?>
<com.google.android.exoplayer2.ui.PlayerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    app:keep_content_on_player_reset="false"
    app:player_layout_id="@layout/layout_exo_simple_player_view"
    app:resize_mode="zoom"
    app:show_buffering="never"
    app:show_timeout="1000"
    app:surface_type="texture_view"
    app:use_controller="false">
    <!--keepScreenOn 保持屏幕常亮-->
    <!--use_controller 使用默认的控制器-->
    <!--show_timeout 控制器时长-->
    <!--keep_content_on_player_reset player重置时需不需要保留最后一帧画面-->
    <!--surface_type 显示视频画面view的类型-->
    <!--resize_mode 视频画面帧缩放形式-->
    <!--show_buffering 当视频加载时显示默认的加载框-->
    <!--player_layout_id 可通过此属性指定PlayerView的布局样式-->


</com.google.android.exoplayer2.ui.PlayerView>